[control_plane]
control-plane-01 ansible_host=${cp_ip} ansible_user=ubuntu ansible_ssh_private_key_file=${ssh_key}

[workers]
%{ for index, ip in worker_ips ~}
worker-0${index + 1} ansible_host=${ip} ansible_user=ubuntu ansible_ssh_private_key_file=${ssh_key}
%{ endfor ~}

[all:vars]
ansible_python_interpreter=/usr/bin/python3